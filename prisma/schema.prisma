// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User{

      id Int @id @default(autoincrement())
      email String @unique
      name String
      profile Profile?

      }



 
 model Product{

      id Int @id @default(autoincrement())
      name String
      stock Int
      price Int
      photo String

      }

      model Profile{
        id Int @id @default(autoincrement())
        fristName String
        lastName String
        city String
        userId Int @unique
        User User @relation(fields: [userId],references: [id],onDelete: Restrict,onUpdate: Cascade)
      }